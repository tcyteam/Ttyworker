php_flag display_errors on

# Le serveur doit suivre les liens symboliques :
Options +FollowSymlinks

# Activation du module de rÃ©Ã©criture d'URL :
RewriteEngine on
RewriteBase /

#--------------------------------------------------
# RÃ¨gles de rÃ©Ã©criture d'URL :
#--------------------------------------------------
RewriteRule ^([a-z]*)/([a-z]*)/([a-z0-9]*)/([A-Za-z\+]+[0-9]*)$   index.php?ngi=$1&action=$2&id1=$3&id2=$4
RewriteRule ^([a-z]*)/([a-z]*)/([a-z]*)/([-_.@a-z]*)$   index.php?ngi=$1&action=$2&id1=$3&id2=$4
RewriteRule ^([a-z]*)/([a-z]*)/([a-z]*)/([-_.@0-9]*)$   index.php?ngi=$1&action=$2&id1=$3&id2=$4
RewriteRule ^([a-z]*)/([a-z]*)/([0-9]*)/([-_.@0-9]*)$   index.php?ngi=$1&action=$2&id1=$3&id2=$4
RewriteRule ^([a-z]*)/([a-z]*)/([0-9]*)/([-_.@a-z]*)$   index.php?ngi=$1&action=$2&id1=$3&id2=$4
RewriteRule ^([a-z]*)/([a-z]*)/([-_.@a-z0-9]*)/([-_.@a-z0-9]*)$   index.php?ngi=$1&action=$2&id1=$3&id2=$4
RewriteRule ^([a-z]*)/([a-z]*)/([a-z0-9]*)$   index.php?ngi=$1&action=$2&id1=$3
RewriteRule ^([a-z]*)/([a-z]*)/([@0-9]*)$   index.php?ngi=$1&action=$2&id1=$3
RewriteRule ^([a-z]*)/([a-z]*)/([@a-z]*)$   index.php?ngi=$1&action=$2&id1=$3
RewriteRule ^([a-z]*)/([a-z]*)$   index.php?ngi=$1&action=$2
RewriteRule ^([a-z]*)$   index.php?ngi=$1

AddType application/x-httpd-php .php

ErrorDocument 404 /index.php?ngi=error&action=404
ErrorDocument 403 /index.php?ngi=error&action=403
ErrorDocument 503 /index.php?ngi=error&action=503