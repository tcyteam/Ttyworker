<?php
if(!empty(self::$communicator['news']))
{
        $this->Msg('<table><tr><th>Titre</th><th>Date</th><th>Posted by</th></tr>');	
		while($news = self::$communicator['news']->fetch(PDO::FETCH_OBJ))
        {
            $this->Msg('<tr><td>'.$news->titre.'</tr><td>'.$news->date.'</tr><td>'.$news->auteur.'</tr></td>')
		}
		$this->Msg('</table>');
}
?>